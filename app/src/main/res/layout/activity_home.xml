<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/loggedin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logged in as: "
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/loggedin" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/phishx_logo"/>
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:text="Welcome!"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/welcome"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="This is PhishX, An Information Security Solution for it's users."/>

    <TextView
        android:id="@+id/desc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc"
        android:textSize="20sp"
        android:text="Please click on Generate to get the fake credencials to make PhishX work best for you!"/>


    <Button
        android:id="@+id/btn_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Generate"
        android:layout_below="@+id/desc1"
        android:textSize="17sp"
        android:backgroundTint="@color/colorGrey"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/emailFake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_generate"
        android:text="Fake Email: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorRichBlack"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/fake_email"
        android:layout_below="@+id/btn_generate"
        android:layout_toRightOf="@+id/emailFake"
        android:text="Fake Email"
        android:textColor="@color/colorHoneyPot"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/passwordFake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailFake"
        android:text="Fake Password: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorRichBlack"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/fake_password"
        android:layout_below="@+id/fake_email"
        android:layout_toRightOf="@+id/passwordFake"
        android:text="Fake Pasword"
        android:textColor="@color/colorHoneyPot"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>